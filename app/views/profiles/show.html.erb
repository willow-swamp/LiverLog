<div class="flex flex-col p-4 md:flex-row md:p-8">
  <div class="card rounded-box flex-grow place-items-center bg-white shadow-xl md:w-1/3">
    <div class="w-full p-4">
      <div class="h-full flex-row items-center justify-center text-left md:justify-start md:text-left">
        <div class="flex flex-row items-center pl-2 text-left md:text-left">
          <div class="avatar">
            <div class="h-24 w-24 lg:w-36 lg:h-36 rounded-full">
              <%= image_tag @user.image %>
            </div>
          </div>
          <div class="pl-6">
            <div>
              <p><%= t '.no_alcohol_day' %></p>
              <% @user.non_drinking_days.each do |index| %>
                <div class="badge badge-primary"><%= I18n.t('date.day_names')[index] %></div>
              <% end %>
            </div>
          </div>
        </div>

        <div class="flex-grow py-4 pl-4">
          <h2 class="title-font text-xl font-semibold text-neutral-900 mb-4"><%= @user.username %></h2>
          <p><%= @user.comment %></p>
          <div class="text-right">
            <%= link_to (t 'profiles.edit.title'), edit_profile_path, class:"link text-xs" %>
          </div>

        </div>
        <div class="w-full">
          <p class=""><%= t 'defaults.group' %></p>
          <div class="btn-neutral-100 btn w-full">グループ</div>
          <div class="text-right">
            <a class="link text-xs"><%= t '.create_group' %></a>
          </div>
        </div>
        <div><%= t 'defaults.record' %></div>
        <div class="stats stats-vertical my-2 w-full bg-accent-content shadow sm:stats-horizontal md:stats-vertical">
          <div class="stat">
            <div class="stat-title"><%= t '.no_alcohol_day_achievement' %></div>
            <div class="stat-value"><%= @user.monthly_no_drink_achievement %>%</div>
            <div class="stat-desc"><%= Date.today.beginning_of_month %> - <%= Date.today%></div>
          </div>

          <div class="stat">
            <div class="stat-title"><%= t '.alcohol_intake' %></div>
            <div class="stat-value"><%= @user.monthly_total_amount_alcohol %>ml</div>
            <% if @user.compare_amount_last_manth_total_amount_alcohol > 0 %>
              <div class="stat-desc">↗︎ <%= @user.compare_amount_last_manth_total_amount_alcohol %>ml (<%= @user.compare_rate_last_manth_total_amount_alcohol %>%)</div>
            <% elsif @user.compare_amount_last_manth_total_amount_alcohol < 0 %>
              <div class="stat-desc">↘︎ <%= @user.compare_amount_last_manth_total_amount_alcohol %>ml (<%= @user.compare_rate_last_manth_total_amount_alcohol %>%)</div>
            <% else %>
              <div class="stat-desc">- <%= @user.compare_amount_last_manth_total_amount_alcohol %>ml (<%= @user.compare_rate_last_manth_total_amount_alcohol %>%)</div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="divider md:divider-horizontal"></div>
  <div class="card rounded-box flex-grow bg-white shadow-xl md:w-2/3">
    <div class="flex w-full flex-col p-4">
      <div class="card rounded-box grid place-items-center bg-base-300">
        <%= month_calendar(events: @drink_record) do |date, drink_record| %>
          <div><%= date.day %></div>
          <% drink_record.each do |record| %>
            <% if record.no_drink? %>
              <div class="badge badge-xs badge-primary md:badge-sm lg:badge-md"><%= record.record_type_i18n %></div>
            <% elsif record.drink? %>
              <div class="badge badge-xs badge-secondary md:badge-sm lg:badge-md"><%= record.record_type_i18n %></div>
            <% end %>
          <% end %>
        <% end %>
      </div>
      <div class="flex flex-col justify-evenly md:flex-row md:content-evenly">
        <%= link_to '休肝日・飲酒日を記録', new_drink_record_path, class:"btn btn-accent m-4", data: { turbo: false } %>
      </div>
      <div class="card rounded-box grid h-20 place-items-center bg-base-300 hidden">content</div>
    </div>
  </div>
</div>

